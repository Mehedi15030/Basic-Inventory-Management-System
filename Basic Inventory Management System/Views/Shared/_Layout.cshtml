<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TSP_PROJECT.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.1.5/css/dataTables.dataTables.min.css">
</head>
<body>
    <header>
        <!-- Navbar with toggle button for off-canvas -->
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand ms-2" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <!-- Off-canvas Sidebar -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasNavbarLabel"></h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Catagories" asp-action="Index">Catagory</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Product</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Purchaseorders" asp-action="Index">PurchaseOrder</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="PurchaseOrderItems" asp-action="Index">PurchaseOrderItem</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="SellingOrders" asp-action="Index">SellingOrder</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="SellingOrderItems" asp-action="Index">SellingOrderItem</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Stocks" asp-action="Index">Stock</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Role" asp-action="AddRole">AddRole</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Role" asp-action="AssignRole">AssignRole</a></li>
            </ul>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TSP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true">
        <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/2.1.4/js/dataTables.js"></script>

    <script src="https://cdn.datatables.net/buttons/3.1.1/js/dataTables.buttons.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.1.1/js/buttons.dataTables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.1.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.1.1/js/buttons.print.min.js"></script>
    <script src=""></script>
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>